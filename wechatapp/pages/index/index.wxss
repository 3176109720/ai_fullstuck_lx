/* 继承 */
page {
  font-size: 32rpx;
  line-height: 1.5;
}
image {
    display: block;/*盒子的性质*/
    width: 100%;
}
.hero { height: 100vh;}
.hero image {
    height: 38.2vh;/*图片宽高比， 等比例， 不能失真*/
}
.hero.white { background:#ffff;}/*css限定， 多人协作同时具有hero和white 修改别人代码*/
.hero .content {
    padding-top: 10%;
}
.hero .content.centered{
    text-align: center;
}
.hero .header {
  font-size: 72rpx;
  font-weight: bold;
  margin: 0 12% 16rpx;/*顺时针*/
}
.hero .sub-header {
  font-size: 32rpx;
  margin-bottom: 16rpx;
  color: rgba,(0,0, 0,0.85);
}
.hero .description {
  padding: 0 12%;
  margin-bottom: 64rpx;
}